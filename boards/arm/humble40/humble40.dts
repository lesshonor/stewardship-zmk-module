        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        zephyr,flash-controller = &ssi;
        zephyr,code-partition = &code_partition;

        zmk,kscan = &kscan;
        zmk,physical-layout = &uniform_layout;
        zmk,backlight = &backlight;

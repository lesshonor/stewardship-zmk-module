    aliases {
        watchdog0 = &wdt0;
    };

    xtal_clk: xtal-clk {
        compatible = "fixed-clock";
        clock-frequency = <DT_FREQ_M(12)>;
        #clock-cells = <0>;
    };

    backlight: pwm_leds {
        compatible = "pwm-leds";
        pwm_led0: pwm_led_0 {
            /* Backlight pin is GP28. For tl;dr reasons, the pwm channel is GPXX % 16 = 12.
             * tl;dr:
             * - Zephyr discord: https://discord.com/channels/720317445772017664/938474761405726800/1042899590153764977
             * - https://github.com/khoih-prog/RP2040_PWM?tab=readme-ov-file#programmers-model
             */
            pwms = <&pwm 12 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
        };
    };

    kscan: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";

        col-gpios

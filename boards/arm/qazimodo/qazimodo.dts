/dts-v1/;
#include <st/f0/stm32f072Xb.dtsi>
#include <st/f0/stm32f072v(8-b)tx-pinctrl.dtsi>

#include <dt-bindings/zmk/matrix_transform.h>

#include "qazimodo-layouts.dtsi"

/ {
    model = "Qazimodo";
    compatible = "quasi-keys,qazimodo", "st,stm32f072";

    chosen {
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        zmk,kscan = &kscan;
        zmk,physical-layout = &layout_dual_175u;
    };

    /omit-if-no-ref/ transform_dual_175u: transform_dual_175u {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <4>;
        map = <
    RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
    RC(1,0)   RC(1,1)   RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6) RC(1,7) RC(1,8)     RC(1,9)  RC(1,11)
    RC(2,0)     RC(2,1)   RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7) RC(2,8)   RC(2,9)  RC(3,11)
                    RC(3,1) RC(3,2)  RC(3,3)    RC(3,5)  RC(3,7) RC(3,8)
        >;
    };

    /omit-if-no-ref/ transform_225u_275u: transform_225u_275u {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <4>;
        map = <
    RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
    RC(1,0)   RC(1,1)   RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6) RC(1,7) RC(1,8)     RC(1,9)  RC(1,11)
    RC(2,0)     RC(2,1)   RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7) RC(2,8)   RC(2,9)  RC(3,11)
                    RC(3,1)          RC(3,3)     RC(3,5)         RC(3,8)
        >;
    };

    /omit-if-no-ref/ transform_6u: transform_6u {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <4>;
        map = <
    RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
    RC(1,0)   RC(1,1)   RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6) RC(1,7) RC(1,8)     RC(1,9)  RC(1,11)
    RC(2,0)     RC(2,1)   RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7) RC(2,8)   RC(2,9)  RC(3,11)
                    RC(3,1)               RC(3,5)                RC(3,8)
        >;
    };

    kscan: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";

        col-gpios
        = <&gpiob 10 GPIO_ACTIVE_HIGH>
        , <&gpiob  2 GPIO_ACTIVE_HIGH>
        , <&gpiob  1 GPIO_ACTIVE_HIGH>
        , <&gpiob  0 GPIO_ACTIVE_HIGH>
        , <&gpioa  7 GPIO_ACTIVE_HIGH>
        , <&gpioa  6 GPIO_ACTIVE_HIGH>
        , <&gpioa  5 GPIO_ACTIVE_HIGH>
        , <&gpioa  4 GPIO_ACTIVE_HIGH>
        , <&gpioa  3 GPIO_ACTIVE_HIGH>
        , <&gpioa  2 GPIO_ACTIVE_HIGH>
        , <&gpiob 13 GPIO_ACTIVE_HIGH>
        , <&gpiob  3 GPIO_ACTIVE_HIGH>
        ;
        row-gpios
        = <&gpiob 12 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&gpiob 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&gpioa  1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&gpioa  0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        ;
    };
};

&gpioc { status = "disabled"; };
&gpiod { status = "disabled"; };
&gpioe { status = "disabled"; };
&gpiof { status = "disabled"; };

zephyr_udc0: &usb {
    status = "okay";

    pinctrl-0 = <&usb_dm_pa11 &usb_dp_pa12>;
    pinctrl-names = "default";
};

&clk_hsi {
    status = "okay";
};

&clk_hsi48 {
    status = "okay";
};

&pll {
    prediv = <1>;
    mul = <6>;
    clocks = <&clk_hsi>;
    status = "okay";
};

&rcc {
    clocks = <&pll>;
    clock-frequency = <DT_FREQ_M(48)>;
    ahb-prescaler = <1>;
    apb1-prescaler = <1>;
};


&rtc {
    status = "okay";
};
